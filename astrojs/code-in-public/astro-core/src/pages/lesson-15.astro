---
import PricingCard from "../components/PricingCard.astro";
import cards from "../data/card-data.json";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <section aria-label="Pricing">
      {
        cards.map((card) => {
          return <PricingCard cardData={card} />;
        })
      }
    </section>
  </body>
</html>

<style>
  *,
  *::after,
  *::before {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  body {
    display: grid;
    place-content: center;
    min-height: 100vh;
    padding: 1.5rem;
  }

  [aria-label="Pricing"] {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    align-items: flex-start;
  }
</style>
