---
import PricingCard from "../components/lesson-15-18/PricingCard.astro";
import cards from "../data/card-data.json";
import "../styles/global.css";
import "@/styles/lesson-15.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lesson15-18</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Noto+Sans+SC:wght@100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <section aria-label="Pricing">
      {
        cards.map((card) => {
          return <PricingCard cardData={card} />;
        })
      }
    </section>
  </body>
</html>

<style>
  *,
  *::after,
  *::before {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  body {
    display: grid;
    place-content: center;
    min-height: 100vh;
    padding: var(--space--xl);
  }

  [aria-label="Pricing"] {
    display: flex;
    gap: var(--space--xl);
    flex-wrap: wrap;
    align-items: flex-start;
    justify-content: center;
  }
</style>
